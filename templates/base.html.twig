<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		<link rel="stylesheet" href="{{ asset('css/base.css') }}">
		<link rel="stylesheet" href="{{ asset('css/normalize.css') }}">
		<link	rel="stylesheet" href="{{ asset('css/styles.css') }}">	
        {% block stylesheets %}
        {% endblock %}

        
    </head>
    <body>
    {% block nav %}
			<nav class="navbar navbar-expand-lg navbar-dark bg-dark p-2 text-white">
				<div class="container m-2">
					<a href="{{ path('app_home') }}"><img class="logo" src="{{ asset('images/Logonft.png') }}" alt="Logo"></a>
					<div class="collapse navbar-collapse" id="navbarNav">
						<ul class="navbar-nav color-white gap-2">
						{% if is_granted('ROLE_ADMIN') %}
							<li class="nav-item">
								<a class="nav-link text-white" href="{{ path('admin')}}">Dashboard Admin</a>
							</li>
						{% endif %}
		                    	<li class="nav-item">
								<a class="nav-link text-white" href="">Galerie NFT</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-white" href="{{ path('app_mon_compte')}}">Mon Compte</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-white" href="{{ path('nft_make')}}">Création</a>
							</li>
							{% if app.user %}
							<li class="nav-item">
								<a class="nav-link text-white" href="{{ path('app_logout') }}">Logout</a>
							</li>
							{% else %}
			                <li class="nav-item">
								<a class="nav-link text-white" href="{{ path('app_login') }}">Login</a>
							</li>							
							<li class="nav-item">
								<a class="nav-link text-white" href="{{ path('app_register')}}">Inscription</a>
							</li>
							{% endif %}
						</ul>
					</div>
				</div>
			</nav>
		{% endblock nav %}

        {% block body %}{% endblock %}

        {% block footer %}
			<footer class="fixed-bottom">
				<nav class="navbar-expand navbar-light bg-light py-2 px-1">
					<ul class="navbar-nav d-flex justify-content-between">
						<li class="nav-item">
							<a class="nav-link active" aria-current="page" href="">Terms & Conditions
							</a>
						</li>
						<li class="nav-item">
							<a href="{{ path('app_home') }}"><img class="logof" src="" alt="Logo"></a>
						</li>
						<li class="nav-item">
							<a class="nav-link active" aria-current="page" href="{{ path('app_home') }}">Home</a>
						</li>
					</ul>
				</nav>
			</footer>
		{% endblock %}

		
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
		<script src="{{asset('js/collection.js')}}" defer></script>
		{% block javascripts %}{% endblock %}
	</body>
</html>


